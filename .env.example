# Copy this file to .env and fill in your values
# To run the app without Jira (mock data), set JIRA_MOCK=true

# ========================================
# JIRA CONFIGURATION
# ========================================
# JIRA_MOCK enables mock mode when set to "true"
# Set to "false" for real Jira integration
JIRA_MOCK=true

# When not using mock mode (JIRA_MOCK=false), set these to your Atlassian Cloud settings
JIRA_HOST=your-domain.atlassian.net
JIRA_EMAIL=you@example.com
JIRA_API_TOKEN=your_api_token_here
JIRA_BOARD_ID=123
JIRA_PROJECT_KEY=ABC

# Custom field IDs (check your Jira admin settings)
JIRA_CUSTOMER_FIELD=customfield_10000
JIRA_STORY_POINTS_FIELD=customfield_10002
JIRA_TASK_OWNER_FIELD=customfield_10656

# ========================================
# AI ANALYSIS (OpenAI)
# ========================================
# Required for AI Sprint Analysis feature
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ========================================
# REDIS CONFIGURATION
# ========================================
# Redis URL for session storage and rate limiting
# Set REDIS_MOCK=true to use in-memory storage (development only)
REDIS_URL=redis://localhost:6379
REDIS_MOCK=true

# ========================================
# DATABASE (PostgreSQL)
# ========================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sprint_dashboard

# ========================================
# AUTHENTICATION
# ========================================
# JWT secret key - MUST be changed in production!
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Session TTL in seconds (default: 24 hours)
SESSION_TTL=86400

# Refresh token TTL in seconds (default: 7 days)
REFRESH_TOKEN_TTL=604800

# ========================================
# ADMIN USER (Initial Setup)
# ========================================
# Set these to create the first admin user on startup
# After initial setup, you can remove these
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-secure-admin-password

# ========================================
# RATE LIMITING
# ========================================
# Maximum requests per window (default: 100)
RATE_LIMIT_MAX=100

# Rate limit window in seconds (default: 60)
RATE_LIMIT_WINDOW=60

# ========================================
# CRON JOBS
# ========================================
# Secret for authenticating cron job requests (optional)
# Set this if you want to protect cron endpoints
CRON_SECRET=your-cron-secret-key
